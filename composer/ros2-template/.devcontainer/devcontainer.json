{
  "name": "ROS2 Template",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "ros",
  "workspaceFolder": "/home/${localEnv:USERNAME:-admin}/colcon_ws",
  "remoteUser": "${localEnv:USERNAME:-admin}",
  "runServices": ["ros"],
  "shutdownAction": "stopCompose",
  "containerEnv": {
    "ROS_DISTRO": "${localEnv:ROS_DISTRO:-rolling}",
    "USER_UID": "${localEnv:LOCAL_UID:-1000}",
    "USER_GID": "${localEnv:LOCAL_GID:-1000}",
    "USERNAME": "${localEnv:USERNAME:-admin}"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/${localEnv:USERNAME:-admin}/colcon_ws,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.makefile-tools"
      ]
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo rosdep update || true"
}
